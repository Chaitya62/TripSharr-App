<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="OverFlowStyle" >
        <item name="color">@color/colorWhite</item>
        <item name="android:src">@drawable/ic_more_vert_black_48dp</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:color">@color/colorWhite</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item  name="colorControlNormal" >@color/colorWhite</item>
        <item  name="colorButtonNormal" >@color/colorWhite</item>
        <item name="color">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>




    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/com_facebook_button_icon</item>
        <item name="android:height">50dp</item>
        <item name="android:width">300dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">21sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
